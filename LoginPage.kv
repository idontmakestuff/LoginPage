
<LoginManager>:
    LoginScreen:
        name: "login"
    WelcomeScreen:
        name: "welcome"
    SignupScreen:
        name:"signup"


<LoginScreen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            text: ""
            id: notif
        GridLayout:
            padding:"200dp"
            size_hint: 1,20
            rows:2
            Label:
                text:"Username:"
            TextInput:
                id: username
            Label:
                text:"Password:"
            TextInput:
                id: password
        BoxLayout:
            size_hint: .5,2
            Button:
                on_release: root.login(username.text,password.text)
                text: "LOGIN"
            Button:
                on_release: root.gosignup()
                text: "SIGNUP"

        Label:
            text:""

<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Welcome to !"
        Button:
            text:"Log Out"
            size_hint:1,.2
            on_release: root.logout()
<SignupScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text:""
            id: "sign_notif"
        GridLayout:
            padding:"200dp"
            size_hint:1,20
            rows:2
            Label:
                text: "New Username:"
            TextInput:
                id: newuser
            Label:
                text: "New Password:"
            TextInput:
                id: newpass
            Label:
                text: "Repeat Password:"
            TextInput:
                id: newpass2
            Label:
                text:""
            Button:
                text:"Sign Up"
                on_release: root.signup(newuser.text,newpass.text,newpass2.text)

